<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="Consola"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d %green([%thread]) %highlight(%level) %cyan(%logger{50}) -
				%msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="Fichero"
		class="ch.qos.logback.core.FileAppender">
		<file>CURSO2425_UD5_Hibernate_0.log</file>
		<encoder>
			<pattern>%d [%thread] %-5level %-40logger{50} - %msg%n</pattern>
		</encoder>
	</appender>
	<root level="info">
		<appender-ref ref="Consola" />
		<appender-ref ref="Fichero" />
	</root>

	<!-- Configuración específica para Hibernate -->
	<!-- Consultas SQL generadas -->
	<logger name="org.hibernate.SQL" level="DEBUG" />

	<!-- Mostrar parámetros de las consultas -->
	<logger name="org.hibernate.orm.jdbc.bind" level="TRACE" />


	<!-- Configuración interna de Hibernate -->
	<logger name="org.hibernate" level="INFO" />
</configuration>